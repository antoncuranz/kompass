{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "React App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/app/node_modules/.bin/vite",
      "runtimeArgs": ["--port", "3000"],
      "cwd": "${workspaceFolder}/app",
    },
    {
      "name": "Transportation API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/transportation-api/cmd/app/main.go",
      "cwd": "${workspaceFolder}/transportation-api",
      "envFile": "${workspaceFolder}/.vscode/.env",
    }
  ]
}
